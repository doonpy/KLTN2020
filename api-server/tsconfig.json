{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "../dist/api-bgr-job",
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@root/*": ["./*"],
      "@background-job/*": ["background-job/*"],
      "@common/*": ["common/*"],
      "@middleware/*": ["middleware/*"],
      "@service/*": ["service/*"],
      "@util/*": ["util/*"]
    }
  }
}
