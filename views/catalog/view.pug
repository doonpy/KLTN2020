extends ../header

block content
    if data.length === 0
        p.text-danger Nothing in here :(
    else
        ul.list-group
            for d in data
                li.list-group-item.list-group-item-info
                    h5=d.hostName
                    .list-group
                        if(d.catalogs.length === 0)
                            p Empty
                        else
                            for catalog in d.catalogs
                                if catalog.isDefined
                                    a(href=`/catalog/detail/${catalog.id}`).list-group-item.list-group-item-success.list-group-item-action
                                        .float-right.small.box-check
                                            h6 Defined
                                            i.material-icons.text-success.icon-check check_circle
                                        h5=catalog.name
                                else
                                    a(href=`/catalog/detail/${catalog.id}`).list-group-item.list-group-item-danger.list-group-item-action
                                        .float-right.small.box-check
                                            h6 No definition yet
                                            i.material-icons.text-danger.icon-check error
                                        h5=catalog.name

